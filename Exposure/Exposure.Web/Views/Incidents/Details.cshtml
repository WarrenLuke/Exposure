@model Exposure.Entities.Incident
@{
    ViewBag.Title = "Incident Details";
}
<p>
    <a href="@Url.Action("Notifications","Home")">Back to notifications</a>
</p>
<h2>@ViewBag.Title</h2>

@foreach (var item in ViewBag.Incident)
{
    <div class="row">
        <div class="col-md-offset-1 col-md-5 panel panel-default" style="padding:1em">
            <h3>Reporter Details</h3>
            <hr/>
            <div class="col-md-12">
                <div class="col-md-6">
                    <strong>Full name</strong>
                </div>
                <div class="col-md-6">
                    @item.User.FirstName @item.User.LastName
                </div>

                <div class="col-md-6">
                    <strong>Job</strong>
                </div>
                <div class="col-md-6">
                    @item.Incident.Job.Title
                </div>

                <div class="col-md-6">
                    <strong>Job End Date</strong>
                </div>
                <div class="col-md-6">
                    @item.Incident.Job.EndDate
                </div>

                <div class="col-md-6">
                    <strong>Location</strong>
                </div>
                <div class="col-md-6">
                    @item.Incident.Job.AddressLine1<br />
                    @item.Incident.Job.Suburb.SubName<br />
                    @item.Incident.Job.Suburb.City.CityName
                </div>
            </div>

        </div>
        <div class="col-md-offset-1 col-md-5 panel panel-default" style="padding:1em">
            <h3>Incident</h3>
            <div class="col-md-6">
               <strong>Description</strong>
            </div>
            <div class="col-md-6">
                @item.Incident.Description
            </div>

        </div>
    </div>
}


