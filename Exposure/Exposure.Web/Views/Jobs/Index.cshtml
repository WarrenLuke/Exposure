@model IEnumerable<Exposure.Entities.Job>

@{
    ViewBag.Title = "Jobs";
}
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@if (TempData["JobSuccess"] != null)
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["JobSuccess"]
    </div>
}

@if (TempData["ReviewSuccess"] != null)
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["ReviewSuccess"]
      </div>
}
<h2>Jobs</h2>
@if (User.IsInRole("Employer"))
{
    <p>
        @Html.ActionLink("Create New", "Create")<br />
        <a href="@Url.Action("Index", "Manage")">Back to profile</a>
    </p>
    <div style="overflow-x:auto">
        <table class="table table-striped table-bordered dt-nowrap">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skill.SkillDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suburb.SubName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine1)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine2)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateAdvertised)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Completed)
                </th>
                <th></th>
            </tr>
            @if (Model == null)
            {
                <tr><th>No jobs to display </th></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Completed == false)
                            {
                                <a href="@Url.Action("Edit", "Jobs", new { id=item.JobID} )">
                                 @Html.DisplayFor(modelItem => item.Title)
                                 </a>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Title)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Skill.SkillDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Suburb.SubName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressLine1)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressLine2)
                        </td>                                              
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAdvertised)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @if (item.Completed == false)
                            {
                                <p>No</p>
                            }
                            else
                            {
                                <p>Yes</p>
                            }
                        </td>
                        <td style="text-align:center">
                            
                            @if(item.Completed==false)
                            {
                                <a href="@Url.Action("Update", "Jobs",new { id = item.JobID })" class="btn btn-default"> Update </a><br />
                            }
                            else if(item.Completed==true)
                            {
                                foreach(var w in ViewBag.WList)
                                {
                                    if(w.JobID==item.JobID)
                                    {
                                        <a href="@Url.Action("Create","Reviews", new {job= item.JobID, worker = w.WorkerID, employer= item.EmployerID })">Review worker</a>
                                    }
                                }                                
                            }
                            <hr/>
                            @Html.ActionLink("Details", "Details", new { id = item.JobID }) 
                            <hr/>
                            @Html.ActionLink("Delete", "Delete", new { id = item.JobID })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
}
else if (User.IsInRole("Admin"))
{
    <div style="overflow-x:auto">
        <table class="table ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employer.ApplicationUser.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skill.SkillDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suburb.SubName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressLine2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAdvertised)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Completed)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a href="@Url.Action("UserDetails", "Account", new {id= item.Employer.EmployerID })">@Html.DisplayFor(modelItem => item.Employer.ApplicationUser.FirstName)  @Html.DisplayFor(modelItem => item.Employer.ApplicationUser.LastName) </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Skill.SkillDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Suburb.SubName)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.AddressLine1)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.AddressLine2)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdvertised)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.JobID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.JobID })
                    </td>
                </tr>
            }

        </table>
    </div>
}
else if (User.IsInRole("Worker"))
{
    <a href="@Url.Action("Index", "Manage")">Back to profile</a>
    <div style="overflow-y:auto">
        <table id="myTable" class="table table-striped table-bordered dt-nowrap" width="100" cellspacing="0" >
            <thead>
                <tr>
                    <th>Job Title</th>
                    <th>Description</th>
                    <th>Skill</th>
                    <th>End Date</th>
                    <th>Job Rate</th>
                    <th>Job Status</th>
                </tr>
            </thead>
            
            @foreach (var item in ViewBag.JobHistory)
            {
                <tr>
                    <td>@item.Job.Title</td>
                    <td>@item.Job.Description</td>
                    <td>@item.Job.Skill.SkillName</td>
                    <td>@item.Job.EndDate</td>
                    <td>@item.Job.Rate</td>
                    <td>@item.Job.Status</td>
                </tr>
            }

        </table>
    </div>



}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('#myTable').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": false,
            "orderMulti": false,
            "pageLength": 5,

            //Used to call action method in controller
            "ajax": {
                "url": "/.../...",
                "type": "POST",
                "datatype": "json",
            },

            //Used to hide certain columns from the table
            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                },
                {
                    "targets": [7],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [8],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [9],
                    "searchable": false,
                    "orderable": false
                    }],

            "columns": [
                { "data": "JobID", "name": "JobID", "autoWidth": true },
                { "data": "Title", "name": "Title", "autoWidth": true },
                { "data": "Description", "title": "Description", "name": "ContactName", "autoWidth": true },
                { "data": "SkillName", "name": "SkillName", "autoWidth": true },
                { "data": "EndData", "name": "EndDate", "autoWidth": true },
                { "data": "Rate", "name": "Rate", "autoWidth": true },
                { "data": "Status", "name": "Status", "autoWidth": true },
                ]

        });
    });


</script>




