@{
    ViewBag.Title = "Home Page";
}
<br/>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="jumbotron col-md-12 " style="background-color:#f7e8dd">
                <h1 style="font-family:'Californian FB'">WHAT DO WE DO?</h1>
                <p class="lead" style="font-family:'Californian FB'">
                    Exposure is a website designed to bridge the gap between casual workers who are good with using their hands, and
                    potential employers looking for workers to work in their personal homes, business or holiday homes.
                </p>

            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col  text-center">
                <h3 style="font-family:'Californian FB'">CURRENT USERS</h3>
            </div>
            <div class="col-md-2 col-md-offset-2  text-center">
                <h3 style="font-family:'Californian FB'">SUCCESSFUL JOBS</h3>
            </div>
            <div class="col-md-3 col-md-offset-2 text-center">
                <h3 style="font-family:'Californian FB'">CURRENT JOBS ADVERTISED</h3>
            </div>

        </div>
        <div class="row">
            <div class="col-md-2 text-center">
                <p style="font-family:'Californian FB'">
                    <text style="font-size:50px">@ViewBag.Users</text>
                </p>
            </div>

            <div class="col-md-offset-2 col-md-2 text-center">
                <p style="font-family:'Californian FB'">
                    <text style="font-size:50px">@ViewBag.SJobs</text>
                </p>
            </div>

            <div class="col-md-offset-2 col-md-3 text-center">
                <p style="font-family:'Californian FB'">
                    <text style="font-size:50px">@ViewBag.Jobs</text>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="well text-center" style="background-color:#dedede">
            <p style="font-family:'Californian FB'; font-size:x-large">
                ARE YOU A <text style="color:#ff6a00">CASUAL WORKER</text> LOOKING FOR WORK?<br />
                DO YOU NEED <text style="color:#ff6a00">WORK TO BE DONE</text> AROUND
                YOUR HOUSE OR HOLIDAY HOME?<br />
                SIGN UP NOW AND SEE WHAT <text style="color:#ff6a00">EXPOSURE</text>
                CAN DO FOR YOU
            </p>
            <br />
            <br />
            <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-lg">REGISTER</a>
        </div>
    </div>
    </div>    
    
    
