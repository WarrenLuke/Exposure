                        <input type="submit" class="btn btn-default"  value="Job Applicatons" formaction=@Url.Action("Index", "JobApplications") />
                    </div>
                    <div class="col-md-2"></div>
                </div>


                <div class="col-md-4">
                    <h3>PERSONAL DETAILS</h3>
                    <dl>
                        <dt>@Html.DisplayNameFor(model => model.FirstName):</dt>
                        <dd>
                            @user.FirstName
                        </dd>

                        <dt>@Html.DisplayNameFor(Model => Model.LastName):</dt>
                        <dd>     @user.LastName   </dd>

                        <dt>@Html.DisplayNameFor(Model => Model.Gender):</dt>
                        <dd>     @user.Gender    </dd>

                        <dt>@Html.DisplayNameFor(model => model.Suburb):</dt>
                        <dd>     
                            @foreach (var item in ViewBag.userSub)
                            {
                                @item.Suburb.SubName
                            }    
                        </dd>

                        <dt>@Html.DisplayNameFor(model => model.AddressLine1):</dt>
                        <dd>     @user.AddressLine1  </dd>

                        <dt>@Html.DisplayNameFor(model => model.AddressLine2):</dt>
                        <dd>     
                            @if(user.AddressLine2==null)
                            {
                                <p>None</p>
                            }
                            else
                            {
                                @user.AddressLine2  
                            }  
                        </dd>
                        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd>     @user.Email       </dd>

                        <dt>@Html.DisplayNameFor(model => model.PhoneNumber):</dt>
                        <dd>
                            @if (@Html.DisplayFor(model => model.PhoneNumber) == null)
                            {
                                @Html.ActionLink("Add Phone Number", "AddPhoneNumber")
                            }
                            else
                            {
                                @user.PhoneNumber

                            }

                        </dd>
                    </dl>
                    <input type="submit" class="btn btn-default" value="Update Personal Details" formaction=@Url.Action("EditProfile") /><br />
                </div>

                <div class="col-md-4">
