                                {
                                    <p>None</p>
                                }
                                else
                                {
                                    @Html.DisplayFor(model => model.WorkNumber)
                                }
                            </dd>
                        </dl>
                    </div>
                    <input type="submit" class="btn btn-default" value="Update Work Details" formaction=@Url.Action("UpdateWorkDetails") />
                    
                    
