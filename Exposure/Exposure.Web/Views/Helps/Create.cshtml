@model Exposure.Entities.Help

@{
    ViewBag.Title = "Add Question & Answer";
}

<h2>@ViewBag.Title</h2>
<hr/>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()    
    <div class="form-horizontal">      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.HelpQuestion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.HelpQuestion, new { @class = "form-control", rows = 5, columns = 70 } )
                @Html.ValidationMessageFor(model => model.HelpQuestion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HelpAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.HelpAnswer, new { @class = "form-control", rows = 5, columns = 70 } )
                @Html.ValidationMessageFor(model => model.HelpAnswer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Question" class="btn btn-default" />
            </div>
        </div>
    </div>
}


