@model  Exposure.Web.Models.ApplicationUser
@{
    ViewBag.Title = "Edit Profile";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6 panel panel-default">

            @Html.HiddenFor(m => m.Gender, new { @class = "form-control" })
            @Html.HiddenFor(m => m.UserName, new { @class = "form-control" })
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.SuburbID, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.SuburbID, (IEnumerable<SelectListItem>)ViewBag.Suburbs, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SuburbID, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.AddressLine1, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.AddressLine2, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-4"></div>
                <div class="col-md-4"></div>
                <div class="col-md-4"><input type="submit" value="Save" class="btn btn-default" /></div>

            </div>



        </div>

    </div>
}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}