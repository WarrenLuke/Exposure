@model Exposure.Web.Models.ApplicationUser
@{
    ViewBag.Title = "RemovePicture";
}

<h2>Remove Picture?</h2>

@using (Html.BeginForm("RemovePicture", "Account", FormMethod.Post, new { @class = "form-control", role="form", enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <p>Are you sure you want to remove the picture?</p>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Yes" formaction="@Url.Action("RemovePicture")" />&nbsp;&nbsp;<a href="@Url.Action("UpdatePicture", "Account")">No</a>
    </div>
}
