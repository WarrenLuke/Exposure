@model Exposure.Web.Models.ApplicationUser
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Update Picture";
}

<h2>@ViewBag.Title</h2>
<a href="@Url.Action("Index", "Manage")">Back to Profile</a>
@using (Html.BeginForm("UpdatePicture", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-12 text-center">
            
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3 text-center " style="align-content:center">
                <br /><br />
                <form action="@Url.Action("RemovePicture")" method="post">
                    <a href="@Url.Action("RemovePicture")" >Remove Picture</a><br/><br/>
                </form>
                <img src="@Url.Action("ProfilePic", "Home")" class="col-md-4" style="width:320px;height:320px; background: #FFFFFF;
                        margin: auto;
                        -moz-border-radius: 320px;
                        border-radius: 100px;
                        padding: 6px;
                        box-shadow: 0px 0px 20px #888;" />
            </div>
            <div class="col-md-3">
            </div>
        </div>
        <br/>
        <br/>
        <div class="row">
            <div class="row">
                <div class="col-md-offset-3 col-md-3">
                    <input type="file" class="form-control" name="ProfilePic" id="fileUpload" accept=".png, .jpg, .jpeg, .gif, .tif" />
                </div>
                <div class="col-md-6">
                    <input type="submit" class="btn btn-default" value="Save Picture" formaction="@Url.Action("UpdatePicture", "Account")" />
                </div>
            </div>
            
            <div class=" col-md-4">

            </div>
        </div>
    </div>
    
}
