@model Exposure.Entities.GeneralBusiness
@{
    ViewBag.Title = "Update Banner";
}

<h2>@ViewBag.Title</h2>
<a href="@Url.Action("Details", "GeneralBusinesses")">Back To Details</a>
<hr/>
@using (Html.BeginForm("UpdateBanner", "GeneralBusiness", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class="text-danger"})
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3 text-center" style="align-content:center">
            <br/>
            <br/>
            <img src="@Url.Action("ProfilePic", "Home")" class="col-md-4" style="width:320px;height:320px; background: #FFFFFF;
                        margin: auto;
                        -moz-border-radius: 320px;                        
                        padding: 6px;
                        box-shadow: 0px 0px 20px #888;" />
        </div>
        <div class="col-md-3"></div>        
    </div>
    <br/>
    <br/>
    <div class="row">
        <div class="col-md-offset-3 col-md-3">
            <input type="file" class="form-control" name="CompanyBanner" id="fileUpload" accept=".png, .jpg, .jpeg, .gif, .tif" />
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("UpdateBanner", "GeneralBusinesses")" class="btn btn-default">Upload Picture<i class="glyphicon glyphicon-upload"></i></a>
        </div>
        <div class="col-md-4"></div>
    </div>
}

